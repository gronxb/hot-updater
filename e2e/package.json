{
  "name": "@hot-updater/e2e",
  "version": "1.0.0",
  "private": true,
  "description": "E2E tests for Hot Updater using Detox",
  "scripts": {
    "test:type": "tsc --noEmit",
    "build:apps": "tsx scripts/build-apps.ts",
    "select": "tsx scripts/select-target.ts",
    "test": "detox test",
    "test:ios": "detox test --configuration ios",
    "test:android": "detox test --configuration android",
    "test:setup": "tsx scripts/setup-test-env.ts",
    "test:teardown": "tsx scripts/teardown-test-env.ts",
    "test:full": "pnpm test:setup && pnpm test && pnpm test:teardown",
    "clean": "tsx scripts/cleanup.ts"
  },
  "devDependencies": {
    "@clack/prompts": "0.11.0",
    "@types/jest": "30.0.0",
    "@types/node": "^22.10.2",
    "detox": "20.45.1",
    "jest": "30.2.0",
    "picocolors": "1.1.1",
    "ts-jest": "^29.2.5",
    "tsx": "4.20.6",
    "typescript": "^5.8.2"
  }
}
