{
  "name": "hot-updater",
  "type": "module",
  "version": "0.1.1",
  "bin": {
    "hot-updater": "./dist/index.js"
  },
  "exports": {
    "./config": {
      "types": "./dist/config.d.ts",
      "import": "./dist/config.js",
      "require": "./dist/config.cjs"
    }
  },
  "files": [
    "dist",
    "package.json"
  ],
  "description": "React Native OTA solution for self-hosted",
  "license": "MIT",
  "repository": "https://github.com/gronxb/hot-updater",
  "author": "gronxb <gron1gh1@gmail.com> (https://github.com/gronxb)",
  "bugs": {
    "url": "https://github.com/gronxb/hot-updater/issues"
  },
  "homepage": "https://github.com/gronxb/hot-updater#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts src/config.ts --format esm,cjs --dts --shims",
    "test:type": "tsc --noEmit"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@hono/node-server": "^1.13.4",
    "@hot-updater/console": "0.1.1",
    "boxen": "^8.0.1",
    "commander": "^11.1.0",
    "cosmiconfig": "^9.0.0",
    "cosmiconfig-typescript-loader": "^5.0.0",
    "jszip": "^3.10.1",
    "picocolors": "^1.0.0",
    "plist": "^3.1.0",
    "read-package-up": "^11.0.0",
    "workspace-tools": "^0.36.4",
    "@hot-updater/plugin-core": "0.1.1",
    "@hot-updater/utils": "0.1.1"
  },
  "devDependencies": {
    "@types/connect": "^3.4.38",
    "@types/cosmiconfig": "^6.0.0",
    "@types/plist": "^3.0.5"
  }
}
