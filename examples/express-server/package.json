    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "fumadb": "^0.1.1"
  },
  "devDependencies": {
    "@hot-updater/test-utils": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^20.11.17",
    "execa": "^9.5.2",
    "hot-updater": "workspace:*",
    "prisma": "^6.4.1",
    "tsx": "^4.20.6",
    "typescript": "^5.8.3"
